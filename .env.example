# AI Text Assistant Backend - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="AI Text Assistant Backend"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=127.0.0.1
PORT=8000

# Database Settings (Required)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=ai_text_assistant

# AI Service Settings (Required)
AI_API_KEY=your_ai_api_key_here
AI_API_ENDPOINT=https://api.openai.com/v1
AI_API_TIMEOUT=30
AI_MODEL=gpt-3.5-turbo

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Background Service Settings
BACKGROUND_SERVICE_PORT=8001
BACKGROUND_SERVICE_ENABLED=true

# Security Settings
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=["*"]

# Performance Settings
MAX_REQUEST_SIZE=1048576
REQUEST_TIMEOUT=60